<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_with model: current_user.relationships.find_by(followed_id: user.id) , method: :delete do |f| %>
      <%= hidden_field_tag :followed_id, user.id %>
      <%= f.submit 'フォロー外す', class: 'btn btn-danger ' %>
    <% end %>
  <% else %>
    <%= form_with model: current_user.relationships.build do |f| %>
      <%= hidden_field_tag :followed_id, user.id %>
      <%= f.submit 'フォローする', class: 'btn btn-primary ' %>
    <% end %>
  <% end %>
<% end %>


